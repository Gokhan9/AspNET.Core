@model Course

<div class="card mb-3" id="@Model.Id">
    <div class="row">    
        <div class="col-md-4">
            <img src="~/img/@Model.Image" width="350" alt="">
        </div>
        <div class="col-md-8">
            <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.Id">
                <h5 class="card-title">@Model.Title</h5>
            </a>
            <p class="card-text">@Model.Description</p>
            <p class="card-text">@Model.Version</p>
            <div>
                if(Model.Tags != null) {
                    @foreach(var tag in Model.Tags)
                    {
                        <span class="badge bg-primary">@tag</span>
                    }
                }
            </div>
        </div>
    </div>

